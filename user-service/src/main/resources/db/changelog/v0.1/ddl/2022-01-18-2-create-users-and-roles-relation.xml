<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="LexSolo" id="2022-01-18-2-create-users-and-roles-relation.xml">
    <createTable tableName="users_roles">
      <column name="user_id" type="UUID">
        <constraints nullable="false" foreignKeyName="fk_users_roles_to_user" references="users(id)"/>
      </column>
      <column name="role_id" type="UUID">
        <constraints nullable="false" foreignKeyName="fk_users_roles_to_role" references="roles(id)"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
